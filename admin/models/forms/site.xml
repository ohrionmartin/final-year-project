<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_ehealth_portal/models/rules"
	addfieldpath="/administrator/components/com_ehealth_portal/models/fields"
>
	<fieldset name="details">
		<!-- [Fields 636] Default Fields. -->
		<!-- [Fields 638] Id Field. Type: Text (joomla) -->
		<field
			name="id"
			type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"
		/>
		<!-- [Fields 657] Date Created Field. Type: Calendar (joomla) -->
		<field
			name="created"
			type="calendar"
			label="COM_EHEALTH_PORTAL_SITE_CREATED_DATE_LABEL"
			description="COM_EHEALTH_PORTAL_SITE_CREATED_DATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
		<!-- [Fields 680] User Created Field. Type: User (joomla) -->
		<field
			name="created_by"
			type="user"
			label="COM_EHEALTH_PORTAL_SITE_CREATED_BY_LABEL"
			description="COM_EHEALTH_PORTAL_SITE_CREATED_BY_DESC"
		/>
		<!-- [Fields 700] Published Field. Type: List (joomla) -->
		<field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1" >
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		<!-- [Fields 727] Date Modified Field. Type: Calendar (joomla) -->
		<field name="modified" type="calendar" class="readonly"
			label="COM_EHEALTH_PORTAL_SITE_MODIFIED_DATE_LABEL" description="COM_EHEALTH_PORTAL_SITE_MODIFIED_DATE_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<!-- [Fields 742] User Modified Field. Type: User (joomla) -->
		<field name="modified_by" type="user"
			label="COM_EHEALTH_PORTAL_SITE_MODIFIED_BY_LABEL"
			description="COM_EHEALTH_PORTAL_SITE_MODIFIED_BY_DESC"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
		<!-- [Fields 764] Access Field. Type: Accesslevel (joomla) -->
		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"
			required="false"
		/>
		<!-- [Fields 783] Ordering Field. Type: Numbers (joomla) -->
		<field
			name="ordering"
			type="number"
			class="inputbox validate-ordering"
			label="COM_EHEALTH_PORTAL_SITE_ORDERING_LABEL"
			description=""
			default="0"
			size="6"
			required="false"
		/>
		<!-- [Fields 806] Version Field. Type: Text (joomla) -->
		<field
			name="version"
			type="text"
			class="readonly"
			label="COM_EHEALTH_PORTAL_SITE_VERSION_LABEL"
			description="COM_EHEALTH_PORTAL_SITE_VERSION_DESC"
			size="6"
			readonly="true"
			filter="unset"
		/>
		<!-- [Fields 869] Dynamic Fields. -->
		<!-- [Fields 1937] Site_name Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="site_name"
			label="COM_EHEALTH_PORTAL_SITE_SITE_NAME_LABEL"
			size="40"
			maxlength="150"
			description="COM_EHEALTH_PORTAL_SITE_SITE_NAME_DESCRIPTION"
			class="text_area"
			readonly="false"
			disabled="false"
			required="true"
			filter="STRING"
			message="COM_EHEALTH_PORTAL_SITE_SITE_NAME_MESSAGE"
			hint="COM_EHEALTH_PORTAL_SITE_SITE_NAME_HINT"
		/>
		<!-- [Fields 1937] Description Field. Type: Textarea. (joomla) -->
		<field
			type="textarea"
			name="description"
			label="COM_EHEALTH_PORTAL_SITE_DESCRIPTION_LABEL"
			rows="11"
			cols="10"
			description="COM_EHEALTH_PORTAL_SITE_DESCRIPTION_DESCRIPTION"
			class="text_area span12"
			filter="HTML"
			hint="COM_EHEALTH_PORTAL_SITE_DESCRIPTION_HINT"
		/>
		<!-- [Fields 1937] Site_region Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="site_region"
			label="COM_EHEALTH_PORTAL_SITE_SITE_REGION_LABEL"
			size="40"
			maxlength="150"
			description="COM_EHEALTH_PORTAL_SITE_SITE_REGION_DESCRIPTION"
			class="text_area"
			readonly="false"
			disabled="false"
			required="true"
			filter="STRING"
			message="COM_EHEALTH_PORTAL_SITE_SITE_REGION_MESSAGE"
			hint="COM_EHEALTH_PORTAL_SITE_SITE_REGION_HINT"
		/>
		<!-- [Fields 1937] Alias Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="alias"
			label="COM_EHEALTH_PORTAL_SITE_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			filter="STRING"
			hint="COM_EHEALTH_PORTAL_SITE_ALIAS_HINT"
		/>
	</fieldset>
	
	<!-- [Interpretation 19419] Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- [Interpretation 19424] Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- [Interpretation 19432] Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this site"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_ehealth_portal"
			section="site"
		/>
	</fieldset>
</form>